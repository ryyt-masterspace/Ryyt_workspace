rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /refunds/{refundId} {
      // Public Read (For Customer Tracking Links)
      allow read: if true;
      
      // Write/Delete: Only Authenticated Merchants owning the data
      // Strict Check: Incoming merchantId must match User UID
      allow create: if request.auth != null && request.resource.data.merchantId == request.auth.uid;
      
      // Strict Check: Existing merchantId must match User UID
      allow update, delete: if request.auth != null && resource.data.merchantId == request.auth.uid;
    }

    // Merchants Collection
    match /merchants/{merchantId} {
      // Only the specific merchant can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == merchantId;
    }

    // --- NEW RULE FOR LEADS ---
    match /leads/{leadId} {
      // Allow anyone to submit a form (Create)
      allow create: if true;
      // No one (except Admin via Console) can read or edit them
      allow read, update, delete: if false;
    }
  }
}
